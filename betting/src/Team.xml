<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		
<mapper namespace="Team">		
<resultMap id="selectResultMap"
   type="kr.or.kosta.betting.team.Team">
		<result property="name" column="team_name"/>
		<result property="photo" column="photo"/>
		<result property="num" column="team_num"/>
</resultMap>

<select id="selectTeam" resultMap="selectResultMap">
	SELECT team_name,photo,team_num
    FROM team
    WHERE team_num=#{teamnum}
</select>

<select id="selectTeamList" resultMap="selectResultMap">
	SELECT team_name,photo,team_num
    FROM team
</select>

</mapper>

