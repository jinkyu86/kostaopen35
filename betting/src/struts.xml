<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
	
<struts>
	<!--사용할 문자열-->
	<constant name="struts.i18n.encoding" value="UTF-8"/>
	<!-- 어떤 URL이 입력되었을때 action을 실행하나?
	http://localhost/프로그램명/XX.action
	-->
    <constant name="struts.action.extension" value="action"/>
	<constant name="struts.enable.DynamicMethodInvocation" value="true"/>
	<constant name="struts.devMode" value="true"/>
	
	<package name="root" namespace="/" extends="struts-default">
		
		<action name="loginForm"
			class="kr.or.kosta.betting.member.MemberService"
		  method="loginForm">
			<result name="success">
				/member/login.jsp
			</result>
		</action>
		
		<action name="login"
			class="kr.or.kosta.betting.member.MemberService"
		  	method="login">
		  	<result name="success" type="chain">
				viewHome
			</result>
		</action>
		
		<action name="addMemberForm"
			class="kr.or.kosta.betting.member.MemberService"
		  	method="addMemberForm">
		  	<result name="success">
				member/addMember.jsp
			</result>
		</action>
		
		<action name="addMember"
			class="kr.or.kosta.betting.member.MemberService"
		  	method="addMember">
		  	<result name="success">
				index.jsp
			</result>
		</action>
		
		<action name="editMemberForm"
			class="kr.or.kosta.betting.member.MemberService"
		  	method="editMemberForm">
		  	<result name="success">
				member/editMember.jsp
			</result>
		</action>
		
		<action name="editMember"
			class="kr.or.kosta.betting.member.MemberService"
		  	method="editMember">
		  		
		  	<result name="success" type="chain">
				editMemberForm
			</result>
			<result name="success1" type="chain">
				viewMember
			</result>
			
		</action>
		
		<action name="logout"
			class="kr.or.kosta.betting.member.MemberService"
		  	method="logout">
		  	<result name="success">
				index.jsp
			</result>
		</action>
		
		<action name="removeMember"
			class="kr.or.kosta.betting.member.MemberService"
		  	method="removeMember">
		  	<param name="aliases">
		  		#{'ID':'id'}
			</param>
		  	<result name="success">
				index.jsp
			</result>
		</action>
		
		<action name="viewHome"
			class="kr.or.kosta.betting.member.MemberService"
		  	method="viewHome">
		  	<result name="success">
				index.jsp
			</result>
		</action>
		
		<action name="viewMember"
			class="kr.or.kosta.betting.member.MemberService"
		  	method="viewMember">
		  	<param name="aliases">
		  		#{'ID':'id'}
			</param>
		  	<result name="success">
				member/viewMember.jsp
			</result>
		</action>
			
		<action name="viewMemberRankingListForm"
			class="kr.or.kosta.betting.member.MemberService"
		  	method="viewMemberRankingListForm">
		  	<result name="success">
				member/viewMemberRank.jsp
			</result>
		</action>
		
		<action name="viewMemberList"
			class="kr.or.kosta.betting.member.MemberService"
		  	method="viewMemberList">
		  	<result name="success">
				member/viewMemberList.jsp
			</result>
		</action>
		
		<action name="addMatch" 
		  class="kr.or.kosta.betting.match.MatchService"
		  method="addMatch">
		  	<param name="aliases">
		  		#{'hometeamno':'match.homeTeam.num',
					'awayteamno':'match.awayTeam.num',
					'locno':'match.loc.num',
					'matchtime':'match.matchTime'}
			</param>
			<result name="success" type="chain">
				viewMatchList
			</result>
		</action>
		
		<action name="addMatchForm" 
		  class="kr.or.kosta.betting.match.MatchService"
		  method="addMatchForm">
			<result name="success">
				/match/addMatch.jsp
			</result>
		</action>
		

		<action name="editMatchForm" 
		  class="kr.or.kosta.betting.match.MatchService"
		  method="editMatchForm">
		  	<param name="aliases">
		  		#{'matchno':'matchno'}
			</param>	
			<result name="success">
				/match/editMatch.jsp
			</result>
		</action>
		
		<action name="editMatch" 
		  class="kr.or.kosta.betting.match.MatchService"
		  method="editMatch">
		  	<param name="aliases">
		  		#{
				'matchno':'matchno',
				   'matchno':'match.num',
					'hometeamno':'match.homeTeam.num',
					'awayteamno':'match.awayTeam.num',
					'winteamno':'match.winTeam.num',
					'locno':'match.loc.num',
					'matchtime':'match.matchTime'}
			</param>
			<result name="success" type="chain">
				editMatchForm
			</result>
		</action>
		
		<action name="removeMatch" 
		  class="kr.or.kosta.betting.match.MatchService"
		  method="removeMatch">
		  	<param name="aliases">
		  		#{'matchno':'matchno'}
			</param>	
			<result name="success" type="chain">
				viewMatchList
			</result>
		</action>
		
		<action name="viewMatchList" 
		  class="kr.or.kosta.betting.match.MatchService"
		  method="viewMatchList">
		
			<result name="success">
				/match/viewMatchList.jsp
			</result>
		</action>
		
		<action name="viewMatchListToVistor" 
		  class="kr.or.kosta.betting.match.MatchService"
		  method="viewMatchListToVistor">
		
			<result name="success">
				/match/viewMatchListToVistor.jsp
			</result>
		</action>
		
		<action name="insertBetting" 
		  class="kr.or.kosta.betting.betting.BettingService"
		  method="insertBetting">
			<param name="aliases">
		  		#{'matchno':'matchno'}
			</param>	
			<result name="success" type="chain">
				editMatchForm
			</result>
		</action>
		
		<action name="todayBettingList" 
		  class="kr.or.kosta.betting.betting.BettingService"
		  method="todayBettingList">
			<result name="success" >
				/betting/todayBettingList.jsp
			</result>
		</action>
		
		<action name="bettingGameForm" 
		  class="kr.or.kosta.betting.betting.BettingService"
		  method="bettingGameForm">
			<result name="success" >
				/betting/viewBettingGame.jsp
			</result>
		</action>
		
		<action name="bettingGame" 
		  class="kr.or.kosta.betting.betting.BettingService"
		  method="bettingGame">
		  	<param name="aliases">
		  		#{'districtnum'='districtnum',
					'matchtime'='matchtime',
					'betmineral'='betmineral',
					'home'='home'
					}
			</param>	
			<result name="success" type="chain">
				bettingGameForm
			</result>
			<result name="login" type="chain">
				loginForm
			</result>
		</action>
		
		<action name="viewMemberBetDataByIDList" 
		  class="kr.or.kosta.betting.memberbetdata.MemberBetDataService"
		  method="viewMemberBetDataByIDList">
		  	<result name="success">
				/mbd/viewMBDByIDList.jsp
			</result>
			<result name="login" type="chain">
				loginForm
			</result>
		</action>
		
		<action name="viewMBDByIDForm" 
		  class="kr.or.kosta.betting.memberbetdata.MemberBetDataService"
		  method="viewMBDByIDForm">
		  	<param name="aliases">
		  		#{'mbdnum'='mbdnum'}
			</param>	
		  	<result name="success">
				/mbd/viewMBDByID.jsp
			</result>
			<result name="login" type="chain">
				loginForm
			</result>
		</action>
		
		<action name="cancleBetting" 
		  class="kr.or.kosta.betting.memberbetdata.MemberBetDataService"
		  method="cancleBetting">
		  	<param name="aliases">
		  		#{'mbdnum'='mbdnum',
					'home'='home',
					'away'='away',
					'matchtime'='matchtime',
					'emineral'='emineral',
					'bmineral'='bmineral',
					'districtnum'='districtnum'
					}
			</param>
		  	<result name="success" type="chain">
				viewMemberBetDataByIDList
			</result>
			<result name="cancle" type="chain">
				viewMBDByIDForm
			</result>
			<result name="login" type="chain">
				loginForm
			</result>
		</action>

		<action name="giveMineral" 
		  class="kr.or.kosta.betting.memberbetdata.MemberBetDataService"
		  method="giveMineral">
		  	<param name="aliases">
		  		#{'mbdnum'='mbdnum',
					'home'='home',
					'away'='away',
					'matchtime'='matchtime',
					'emineral'='emineral',
					'bmineral'='bmineral',
					'districtnum'='districtnum'
					}
			</param>
			<result name="success" type="chain">
				viewMBDByIDForm
			</result>
			<result name="login" type="chain">
				loginForm
			</result>
		</action>
		
		<action name="recoveryMineral" 
		  class="kr.or.kosta.betting.memberbetdata.MemberBetDataService"
		  method="recoveryMineral">
		  	<param name="aliases">
		  		#{'mbdnum'='mbdnum',
					'home'='home',
					'away'='away',
					'matchtime'='matchtime',
					'emineral'='emineral',
					'bmineral'='bmineral',
					'districtnum'='districtnum'
					}
			</param>
			<result name="success" type="chain">
				viewMBDByIDForm
			</result>
			<result name="login" type="chain">
				loginForm
			</result>
		</action>
		
		<action name="mineral" 
		  class="kr.or.kosta.betting.memberbetdata.MemberBetDataService"
		  method="mineral">
		  	<!--<param name="aliases">
		  		#{'mbdnum'='mbdnum',
					'home'='home',
					'away'='away',
					'matchtime'='matchtime',
					'emineral'='emineral',
					'bmineral'='bmineral',
					'districtnum'='districtnum'
					}
			</param>-->
			<result name="givemineral" type="chain">
				giveMineral
			</result>
			<result name="recoverymineral" type="chain">
				recoveryMineral
			</result>
			<result name="canclemineral" type="chain">
				cancleBetting
			</result>
		</action>
	</package>
</struts>
