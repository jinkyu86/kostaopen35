<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!--사용할 문자열-->
	<constant name="struts.i18n.encoding" value="utf-8"/>
	<!--어떤 URL이 입력되었을때 Action을 실행하나?
	http://localhost/프로젝트명/XX.action
	-->
	<constant name="struts.action.extension" value="action"/>
	<constant name="struts.enable.DynamicMethodInvocation" value="true"/>
	<constant name="struts.devMode" value="true"/>
	<package name="default" namespace="/" extends="struts-default">
		
		<action name="login" class="kr.or.kosta.student.LoginService" method="login">
			<!-- 파라메터 이름과 속성의 이름이 다를때 어떤 이름의 파라메터를 어떤 이름의 속성에 대입할지 설정-->
			<param name="aliases">
				#{'deptno':'student.department.deptno'}
			</param>
			<result name="success">/student/welcome.jsp</result>
		</action>
		
		<action name="welcome" class="kr.or.kosta.student.LoginService" method="welcome">
			<!-- name="success" Action의 리턴값. Action이 success를 리턴했을때 이동할 페이지 설정-->
			<result name="success">/student/welcome.jsp</result>
			<!-- Action이 login 리턴시 이동할 페이지-->
			<result name="login">/student/login.jsp</result>
		</action>
		
	</package>
</struts>
