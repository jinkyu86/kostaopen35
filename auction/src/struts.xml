<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
  "http://struts.apache.org/dtds/struts-2.0.dtd">
  
<struts>
	<constant name="struts.i18n.encoding" value="UTF-8"/>
	<constant name="struts.action.extension" value="action"/>
	<constant name="struts.enable.DynamicMethodInvocation" value="true"/>
	<constant name="struts.devMode" value="true"/>
	
	<package name="root" namespace="/" extends="struts-default">
		<action name="viewBoard" class="kr.or.kosta.board.BoardService" method="viewBoard">
			<param name="aliases">
				#{'num':'num'}
			</param>
			<result name="success">/board/viewBoard.jsp</result>
		</action>
		<action name="viewBoardList" class="kr.or.kosta.board.BoardService" method="viewBoardList">
			<result name="success">/board/viewBoardList.jsp</result>
		</action>
		<action name="removeBoard" class="kr.or.kosta.board.BoardService" method="removeBoard">
			<param name="aliases">
				#{'num':'num'}
			</param>
			<result name="success">/board/viewBoardList.jsp</result>
		</action>
		<action name="addBoardForm" class="kr.or.kosta.board.BoardService" method="addBoardForm">
			<result name="success">/board/addBoard.jsp</result>
		</action>
		<action name="addBoard" class="kr.or.kosta.board.BoardService" method="addBoard">
			<param name="aliases">
				#{'num':'num'
					'num':'board.num'
					'userid':'board.student.userid'}
			</param>
			<result name="success" type="chain">viewBoard</result>
		</action>			
	</package>
</struts>
