<struts>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.action.extension" value="action"/>
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.objectFactory" value="spring"/>
    
    <package name="root" namespace="/" extends="struts-default">
        
        <global-results> <!--모든 Action에 설정-->
			<!-- error리턴시 /error/error.jsp로 이동-->
		<result name="error">
			/error/error.jsp
			</result>
		<result name="loginForm">
			/login/login.jsp
			</result>
		</global-results>
        
        <action name="viewAuction" class="kr.or.kosta.auction.auction.AuctionService"
         method="viewAuction">
            <param name="aliases">
                #{ 'anum':'auction.anum',
                'anum':'anum',
                'img':'auction.good.img',
                'gName':'auction.good.gName'
                }
            </param>
            <result name="success">
                auction/viewAuction.jsp
            </result>
        </action>
        
        
        <action name="viewAuctionList"
         class="kr.or.kosta.auction.auction.AuctionService"
         method="viewAuctionList">
            
            <result name="success">
                /auction/viewAuctionList.jsp
            </result>
        </action>
        
        <action name="removeAuction"
         class="kr.or.kosta.auction.auction.AuctionService"
         method="removeAuction">
            <result name="success">
                /auction/viewAuctionList.jsp
            </result>
        </action>
        
        <action name="addAuctionForm" class="kr.or.kosta.auction.auction.AuctionService"
         method="addAuctionForm">
            <result name="success">
                /auction/addAuction.jsp
            </result>
        </action>
        
        <action name="addBoard" class="kr.or.kosta.auction.auction.AuctionService" method="addAuction">
            <param name="aliases">
                #{'gNum':'auction.good.gNum'
                'gName':'auction.good.gName'
                'detail':'auction.good.detail'
                'img':'auction.good.img'
                }
            </param>
            <result name="success" type="chain">
                viewAuction
            </result>
        </action>
        
        <action name="addMember"
         class="kr.or.kosta.auction.member.MemberService"
         method="addMember">
            <param name="aliases">
                #{      'userid':'userid',
                'userid':'member.userid'}
            </param>
            <result name="success" type="chain">
                viewAuctionList
            </result>
        </action>
        
        <action name="addMemberForm"
         class="kr.or.kosta.auction.member.MemberService"
         method="addMemberForm">
            <result name="success">
                /member/addMember.jsp
            </result>
        </action>
        
        <action name="viewMemberList"
         class="kr.or.kosta.auction.member.MemberService"
         method="viewMemberList">
            <result name="success">
                /member/viewMemberList.jsp
            </result>
        </action>
        
        <action name="viewMember"
         class="kr.or.kosta.auction.member.MemberService"
         method="viewMember">
            <param name="aliases">
                #{'userid':'userid'}
            </param>
            <result name="success">
                /member/viewMember.jsp
            </result>
        </action>
        
        <action name="editMember"
         class="kr.or.kosta.auction.member.MemberService"
         method="editMember">
            <param name="aliases">
                #{
                'userid':'userid',
                'userid':'member.userid'}
            </param>
            <result name="success" type="chain">
                viewMember
            </result>
        </action>
        
        <action name="editMemberForm"
         class="kr.or.kosta.auction.member.MemberService"
         method="editMemberForm">
            <param name="aliases">
                #{'userid':'userid'}
            </param>
            <result name="success">
                /member/editMember.jsp
            </result>
        </action>
        
        <action name="removeMember"
         class="kr.or.kosta.auction.member.MemberService"
         method="removeMember">
            <param name="aliases">
                #{'userid':'userid'}
            </param>
            <result name="success" type="chain">
                viewAuctionList
            </result>
        </action>
        
        <action name="loginForm" class="kr.or.kosta.auction.member.MemberService"
         method="loginForm">
            <result name="success">
                member/login.jsp
            </result>
        </action>
        
        <action name="login" class="kr.or.kosta.auction.member.MemberService"
         method="login">
            <param name="aliases">
                #{'userid':'member.userid',
                'pw':'member.pw',
                
                'userid':'userid',
                'pw':'pw',
                
                }
                
            </param>
            <result name="success" type="chain">
                viewAuctionList
            </result>
        </action>
        
        <action name="logout" class="kr.or.kosta.auction.member.MemberService"
         method="logout">
            <result name="success" type="chain">
                viewAuctionList
            </result>
        </action>
        
        <action name="editMemberByadmin" class="kr.or.kosta.auction.member.MemberService"
         method="editMemberByadmin">
            <result name="success">
                member/viewMemberList.jsp
            </result>
        </action>
        
        <action name="viewBidList" class="kr.or.kosta.auction.bid.BidService"
         method="viewBidList">
            <result name="success">
                bid/viewBidList.jsp
            </result>
        </action>
        
        <action name="addBid" class="kr.or.kosta.auction.bid.BidService"
         method="addBid">
            <param name="aliases">
                #{ 'aNum':'anum'}
            </param>
            <result name="success" type="chain">
                viewAuction
            </result>
            <result name="login">
                member/login.jsp
            </result>
        </action>
        
        <action name="buy" class="kr.or.kosta.auction.bid.BidService"
         method="buy">
            <param name="aliases">
                #{ 'aNum':'anum'}
            </param>
            <result name="success" type="chain">
                viewAuction
            </result>
            <result name="login">
                member/login.jsp
            </result>
        </action>
        
        <action name="moneyBack" class="kr.or.kosta.auction.bid.BidService"
         method="moneyBack">
            <result name="success" type="chain">
                viewMember
            </result>
        </action>
        
        <action name="viewGoodList"
         class="kr.or.kosta.auction.good.GoodService"
         method="viewGoodList">
            <result name="success">
                /good/viewGoodList.jsp
            </result>
        </action>
        
        <action name="viewGood"
         class="kr.or.kosta.auction.good.GoodService"
         method="viewGood">
            <param name="aliases">
                #{ 'gNum':'gnum'}
            </param>
            <result name="success">
                /good/viewGood.jsp
            </result>
        </action>
        
