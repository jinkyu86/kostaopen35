            </result>
        </action>
        
        <action name="editGoodForm" class="kr.or.kosta.auction.good.GoodService"
         method="editGoodForm">
            <param name="aliases">
                #{'gNum':'gnum'}
            </param>
            <result name="success">
                /good/editGood.jsp
            </result>
        </action>
        
        <action name="editGood" class="kr.or.kosta.auction.good.GoodService"
         method="editGood">
            <param name="aliases">
                #{'gnum':'gnum',
                'gnum':'good.gnum',
                'gname':'good.gname',
                'detail':'good.detail',
                'img':'good.img'}
            </param>
            <result name="success" type="chain">
                viewGood
            </result>
        </action>
        
