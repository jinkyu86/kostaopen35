         method="searchBoardList">
         	<param name="aliases">
         		#{'bnum':'bnum'}
			</param>
            <result name="success">
                board/viewBoardList.jsp
            </result>
        </action>
		
		<action name="addBoardForm" class="kr.or.kosta.auction.board.BoardService"
         method="addBoardForm">
            <result name="success">
                board/addBoard.jsp
            </result>
        </action>
		
		<action name="addBoard" class="kr.or.kosta.auction.board.BoardService"
         method="addBoard">
         	<param name="aliases">
         		#{'userid':'board.member.userid'}
			</param>
            <result name="success" type="chain">
                viewBoard
            </result>
        </action>
		
		<action name="editBoardForm" class="kr.or.kosta.auction.board.BoardService"
		method="editBoardForm">
			<param name="aliases">
                #{'bnum':'bnum'}
            </param>
			<result name="success">
				board/editBoard.jsp
			</result>
		</action>
		
		<action name="editBoard" class="kr.or.kosta.auction.board.BoardService"
		method="editBoard">
			<param name="aliases">
                #{'bnum':'board.bnum',
					'bnum':'bnum',
					'userid':'board.member.userid'}
            </param>
			<result name="success" type="chain">
				viewBoard
			</result>
		</action>
		
