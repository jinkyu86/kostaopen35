         method="viewBoardList">
            <result name="success">
                board/viewBoardList.jsp
            </result>
        </action>
		
		<action name="viewBoard" class="kr.or.kosta.auction.board.BoardService"
         method="viewBoard">
         	<param name="aliases">
         		#{'bnum':'bnum'}
			</param>
